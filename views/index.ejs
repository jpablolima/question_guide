<%- include("partials/header.ejs") %>

    <body>
        <%- include("partials/navBar.ejs") %>


            <div class="container">
                <hr>
                <h1> Perguntas </h1>
                <hr>
                <a href="/toask" class="btn btn-primary"> Perguntar</a>
                <hr>

                <% question.forEach(question => { %>
                    <br>
                    <div class="card">
                        <h3>
                            <%= question.title %>
                        </h3>
                        <div class="card-body">
                            <h3>
                                <%= question.description %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/reply/<%= question.id %>"> <button class="btn btn-primary">Responder</button> </a>
                        </div>
                    </div>
                    <% }) %>
            </div>
    </body>

    <%- include("partials/footer.ejs") %>